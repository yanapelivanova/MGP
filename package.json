{
  "name": "mgp-site",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": { "node": ">=18.17" },

  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",

    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",

    "prepare": "husky"
  },

  "dependencies": {
    "@vercel/analytics": "^1.3.1",
    "framer-motion": "11.2.10",
    "lucide-react": "0.452.0",
    "next": "14.2.4",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },

  "devDependencies": {
    "autoprefixer": "10.4.19",
    "postcss": "8.4.40",
    "tailwindcss": "3.4.10",

    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0"
  },

  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "next lint --fix --file"
    ],
    "**/*.{css,md,json}": "prettier --write"
  }
}
